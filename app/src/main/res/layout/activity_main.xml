<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_mic"
                    android:layout_width="@dimen/ic_size_small"
                    android:layout_height="@dimen/ic_size_small"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_mic" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_album"
                    android:layout_width="@dimen/ic_size_small"
                    android:layout_height="@dimen/ic_size_small"
                    android:layout_gravity="center"

                    android:src="@drawable/ic_album" />
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_radio"
                    android:layout_width="@dimen/ic_size_small"
                    android:layout_height="@dimen/ic_size_small"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/ic_radio" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_vcam"
                    android:layout_width="@dimen/ic_size_small"
                    android:layout_height="@dimen/ic_size_small"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/ic_videocam" />
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_color_height"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_vector_small"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color.red"
            android:gravity="center"
            android:orientation="vertical"
            android:text="@string/vector_size_small"
            android:textColor="@color/color.white"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btn_vector_medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color.pink"
            android:gravity="center"
            android:orientation="vertical"
            android:text="@string/vector_size_medium"
            android:textColor="@color/color.white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_vector_large"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color.puple"
            android:gravity="center"
            android:orientation="vertical"
            android:text="@string/vector_size_large"
            android:textColor="@color/color.white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_vector_extra_large"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color.brown"
            android:gravity="center"
            android:orientation="vertical"
            android:text="@string/vector_size_extra_large"
            android:textColor="@color/color.white"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
